<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_baseline_featured_play_list_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/pres_image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prescription A"
        app:layout_constraintLeft_toRightOf="@id/pres_image"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/pres_image"
        android:layout_marginTop="8dp"
        android:id="@+id/pres_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine A, B, C"
        app:layout_constraintLeft_toLeftOf="@id/pres_title"
        android:id="@+id/medicines"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/pres_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prescription required/ not"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/medicines"
        app:layout_constraintTop_toBottomOf="@id/medicines"
        android:id="@+id/pres_req"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/pres_image"
        android:background="@android:color/black"
        android:layout_marginTop="2dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>